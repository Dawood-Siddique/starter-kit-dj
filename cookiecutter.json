    "author_name": "Your Name",
    "author_email": "your.email@example.com",
    "description": "A Django REST API project",
    "database": ["sqlite3", "postgresql"],
    "postgres_db_name": "{{ cookiecutter.project_slug.replace('-', '_') if cookiecutter.database == 'postgresql' else 'not_used' }}",
